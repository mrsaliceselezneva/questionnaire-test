{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "sourceMap": true,
        "paths": {
            "helpers": ["src/helpers/"],
            "components": ["src/components"],
            "api": ["src/api/"],
            "pages": ["src/pages"],
            "baseUrl": ["src/"],
            "store": ["src/redux"],
            "styles": ["src/styles"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
